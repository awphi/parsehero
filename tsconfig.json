{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["ES2016"],
    "moduleResolution": "node",
    "module": "ES2015",
    "target": "ES2015",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true
  },
  "include": ["./src/**/*.ts"]
}
